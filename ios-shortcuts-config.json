  "requirements": {
    "ios": "18.6+",
    "apps": {
      "scriptable": ["Scriptable", "Shortcuts"],
      "terminal": ["a-Shell", "iSH", "Shortcuts"]
    },
    "permissions": ["clipboard", "microphone", "siri"]
  },
  "setup": {
    "scriptable": {
      "steps": [
        "Install Scriptable app from App Store",
        "Create new script in Scriptable named 'Deep Research'",
        "Copy content from scriptableResearch.js into the script",
        "Configure API keys using Keychain.set() or direct edit",
        "Test script by running it with text in clipboard",
        "Import shortcuts from scriptableShortcuts configuration",
        "Test shortcuts integration"
      ],
      "apiKeySetup": [
        "await Keychain.set('BRAVE_API_KEY', 'your_key');",
        "await Keychain.set('NEWS_API_KEY', 'your_key');", 
        "await Keychain.set('NEWSDATA_API_KEY', 'your_key');"
      ]
    },
    "terminal": {
      "steps": [
        "Install a-Shell or iSH from App Store",
        "Install Node.js: pkg install nodejs npm (a-Shell) or apk add nodejs npm (iSH)",
        "Copy project files to ~/Documents/DeepResearchMultiApis/",
        "Install dependencies: npm install",
        "Configure API keys in .env file",
        "Import shortcuts from terminalShortcuts configuration",
        "Test with: npm run shortcuts"
      ]
    }
  },
  "testing": {
    "scriptable": [
      "Copy 'artificial intelligence' to clipboard",
      "Run 'Deep Research' script in Scriptable",
      "Check clipboard for formatted results",
      "Verify iOS notifications appear"
    ],
    "terminal": [
      "Copy 'machine learning' to clipboard", 
      "Run iOS Shortcut with terminal script",
      "Check clipboard for results",
