root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,json}]
quote_type = double
max_line_length = 100

[*.py]
indent_size = 4
max_line_length = 88

[*.{html,css,scss}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
